					{%- assign icon_bubble-user = '<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="50" height="50" viewBox="0 0 20 20"><path d="M0.5 19c-0.225 0-0.422-0.15-0.482-0.367s0.032-0.447 0.225-0.562c1.691-1.014 2.392-2.489 2.641-3.179-1.838-1.407-2.884-3.354-2.884-5.392 0-1.029 0.258-2.026 0.768-2.964 0.486-0.894 1.18-1.695 2.061-2.381 1.787-1.39 4.156-2.156 6.671-2.156s4.884 0.766 6.671 2.156c0.881 0.685 1.575 1.486 2.061 2.381 0.51 0.937 0.768 1.934 0.768 2.964s-0.258 2.026-0.768 2.964c-0.486 0.894-1.18 1.695-2.061 2.381-1.787 1.39-4.156 2.156-6.671 2.156-1.033 0-2.047-0.129-3.016-0.385-0.429 0.286-1.231 0.793-2.189 1.27-1.488 0.74-2.764 1.115-3.794 1.115zM9.5 3c-4.687 0-8.5 2.916-8.5 6.5 0 1.815 1.005 3.562 2.756 4.792 0.172 0.121 0.25 0.336 0.196 0.539-0.117 0.436-0.515 1.633-1.58 2.788 1.302-0.456 2.704-1.247 3.739-1.959 0.123-0.085 0.277-0.11 0.421-0.069 0.948 0.271 1.947 0.409 2.968 0.409 4.687 0 8.5-2.916 8.5-6.5s-3.813-6.5-8.5-6.5z"></path><path d="M12.999 12.465c-0.005-0.172-0.047-0.929-0.427-1.688-0.252-0.503-0.679-1.066-1.399-1.421 0.507-0.458 0.827-1.12 0.827-1.856 0-1.378-1.122-2.5-2.5-2.5s-2.5 1.122-2.5 2.5c0 0.736 0.32 1.398 0.827 1.856-0.72 0.355-1.148 0.917-1.399 1.421-0.423 0.846-0.428 1.688-0.428 1.724 0 0.276 0.224 0.5 0.5 0.5h6c0 0 0 0 0.001 0 0.276 0 0.5-0.224 0.5-0.5 0-0.012-0-0.023-0.001-0.035zM8 7.5c0-0.827 0.673-1.5 1.5-1.5s1.5 0.673 1.5 1.5-0.673 1.5-1.5 1.5c-0.827 0-1.5-0.673-1.5-1.5zM7.061 12c0.047-0.233 0.129-0.521 0.275-0.804 0.409-0.794 1.137-1.196 2.164-1.196s1.755 0.402 2.164 1.196c0.145 0.283 0.228 0.571 0.275 0.804h-4.877z"></path></svg>' -%}
					{%- assign icon_telephone = '<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="50" height="50" viewBox="0 0 20 20"><path d="M16 20c-1.771 0-3.655-0.502-5.6-1.492-1.793-0.913-3.564-2.22-5.122-3.78s-2.863-3.333-3.775-5.127c-0.988-1.946-1.49-3.83-1.49-5.601 0-1.148 1.070-2.257 1.529-2.68 0.661-0.609 1.701-1.32 2.457-1.32 0.376 0 0.816 0.246 1.387 0.774 0.425 0.394 0.904 0.928 1.383 1.544 0.289 0.372 1.73 2.271 1.73 3.182 0 0.747-0.845 1.267-1.739 1.816-0.346 0.212-0.703 0.432-0.961 0.639-0.276 0.221-0.325 0.338-0.333 0.364 0.949 2.366 3.85 5.267 6.215 6.215 0.021-0.007 0.138-0.053 0.363-0.333 0.207-0.258 0.427-0.616 0.639-0.961 0.55-0.894 1.069-1.739 1.816-1.739 0.911 0 2.81 1.441 3.182 1.73 0.616 0.479 1.15 0.958 1.544 1.383 0.528 0.57 0.774 1.011 0.774 1.387 0 0.756-0.711 1.799-1.319 2.463-0.424 0.462-1.533 1.537-2.681 1.537zM3.994 1c-0.268 0.005-0.989 0.333-1.773 1.055-0.744 0.686-1.207 1.431-1.207 1.945 0 6.729 8.264 15 14.986 15 0.513 0 1.258-0.465 1.944-1.213 0.723-0.788 1.051-1.512 1.056-1.781-0.032-0.19-0.558-0.929-1.997-2.037-1.237-0.952-2.24-1.463-2.498-1.469-0.018 0.005-0.13 0.048-0.357 0.336-0.197 0.251-0.408 0.594-0.613 0.926-0.56 0.911-1.089 1.772-1.858 1.772-0.124 0-0.246-0.024-0.363-0.071-2.625-1.050-5.729-4.154-6.779-6.779-0.126-0.315-0.146-0.809 0.474-1.371 0.33-0.299 0.786-0.579 1.228-0.851 0.332-0.204 0.676-0.415 0.926-0.613 0.288-0.227 0.331-0.339 0.336-0.357-0.007-0.258-0.517-1.261-1.469-2.498-1.108-1.439-1.847-1.964-2.037-1.997z"></path></svg>' -%}
					
					{% for i in (1..3) %}
						{% capture icon_num %}advantages_icon{{ i }}{% endcapture %} 

						{% case block.settings[icon_num] %}
							{% when 'truck' %}
								{%- assign icon_var = icon_truck -%}
							{% when 'wallet' %}
								{%- assign icon_var = icon_wallet -%}
							{% when 'bubble-user' %}
								{%- assign icon_var = icon_bubble-user -%}
							{% when 'telephone' %}
								{%- assign icon_var = icon_telephone -%}
						{% endcase %}

						{% if forloop.index == 1 %}
							{%- assign item1_icon = icon_var -%}
						{% endif %}
						{% if forloop.index == 2 %}
							{%- assign item2_icon = icon_var -%}
						{% endif %}
						{% if forloop.index == 3 %}
							{%- assign item3_icon = icon_var -%}
						{% endif %}
					{% endfor %}

					{% case block.settings.block_view %}
						{% when 'together' %}
							<div class="col-sm-4 item__{{ block.type }}">
								<div class="advantages_wrap">
									<div class="advantages_item advantages_item_1 {{ block.settings.style_1 }}">
										<span class="advantages_icon">{{ item1_icon }}</span>
										<p class="advantages_text">{{ block.settings.advantages_text1 }}</p>
									</div>
									<div class="advantages_item advantages_item_2 {{ block.settings.style_2 }}">
										<span class="advantages_icon">{{ item2_icon }}</span>
										<p class="advantages_text">{{ block.settings.advantages_text2 }}</p>
									</div>
									<div class="advantages_item advantages_item_3 {{ block.settings.style_3 }}">
										<span class="advantages_icon">{{ item3_icon }}</span>
										<p class="advantages_text">{{ block.settings.advantages_text3 }}</p>
									</div>
								</div>
							</div>

						{% when 'separately' %}
							<div class="item__{{ block.type }}">
								<div class="col-sm-4">
									<div class="advantages_item advantages_item_1 {{ block.settings.style_1 }}">
										<span class="advantages_icon">{{ item1_icon }}</span>
										<p class="advantages_text">{{ block.settings.advantages_text1 }}</p>
									</div>
								</div>
								<div class="col-sm-4">
									<div class="advantages_item advantages_item_2 {{ block.settings.style_2 }}">
										<span class="advantages_icon">{{ item2_icon }}</span>
										<p class="advantages_text">{{ block.settings.advantages_text2 }}</p>
									</div>
								</div>
								<div class="col-sm-4">
									<div class="advantages_item advantages_item_3 {{ block.settings.style_3 }}">
										<span class="advantages_icon">{{ item3_icon }}</span>
										<p class="advantages_text">{{ block.settings.advantages_text3 }}</p>
									</div>
								</div>
							</div>
					{% endcase %}


				{% when 'blog_posts' %}
					<div class="col-sm-4 item__{{ block.type }}">

						<h4>{{ block.settings.block_title }}</h4>

						<div class="swiper-container blog_posts_carousel" id="blog_carousel_{{ forloop.index }}_{{ section.id }}">
							<div class="advantages_wrap swiper-wrapper">
								{%- assign block_blog = blogs[block.settings.block_blog] -%}

								{% for article in block_blog.articles limit: 3 %}
									<div class="blog_article swiper-slide">
										{% if article.image %}
											<div class="img_placeholder__wrap img_placeholder__{{ section.settings.img_size }}" style="background-image: url( {{ article.image.src | img_url: '370x308', crop: 'center' }} );"></div>
										{% else %}
											<div class="img_placeholder__wrap img_placeholder__{{ section.settings.img_size }} img_placeholder__empty"></div>
										{% endif %}

										<p class="article_date"><time class="article_day" datetime="{{ article.published_at | date: '%Y-%m-%dT%H:%M' }}">{{ article.published_at | date: '%d' }}<span>{{ article.published_at | date: '%B' }}</span></time></p>

										<p class="article_title"><a href="{{ article.url }}">{{ article.title | truncatewords: 11 }}</a></p>
									</div>

								{% endfor %}
							</div>
						</div>

						<div id="blog_carousel_prev_{{ forloop.index }}_{{ section.id }}" class="swiper_btn swiper_btn__prev"></div>
						<div id="blog_carousel_next_{{ forloop.index }}_{{ section.id }}" class="swiper_btn swiper_btn__next"></div>
					</div>

				{% when 'logo_grid' %}
					<div class="col-sm-4 item__{{ block.type }}">
						<h4>{{ block.settings.block_title }}</h4>

						<div class="logo_wrap">
							{% for i in (1..9) %}
								{% capture logo_image %}logo_image{{ i }}{% endcapture %} 
								{% capture logo_url %}logo_url{{ i }}{% endcapture %} 

								<div class="logo_item">
									<a href="{{ block.settings[logo_url] }}">
										<div class="img_placeholder__wrap" style="background-image: url( {{ block.settings[logo_image] | img_url: '110x80', crop: 'center' }} );"></div>
									</a>
								</div>
							{% endfor %}
						</div>
					</div>

				{% when 'newsletter' %}
					{% if block.settings.block_view == 'together' %}
						{%- assign together = true -%}
					{% else %}
						{%- assign together = false -%}
					{% endif %}

					<div class="{% if together %}col-sm-4{% else %}separately{% endif %} item__{{ block.type }}">
						{% if together == false %}
							<div class="col-xs-4">
								<h4>{{ block.settings.block_title }}</h4>

								{% if block.settings.newsletter_text.size > 0 %}
									<p class="form_text">{{ block.settings.newsletter_text }}</p>
								{% else %}	
									<p class="form_text">{{ 'layout.footer.newsletter_tagline' | t }}</p>
								{% endif %}
							</div>
						{% else %}
							<h4>{{ block.settings.block_title }}</h4>
						{% endif %}
						
						{% if together %}
							<div class="newsletter_wrap">
						{% else %}
							<div class="col-xs-4 newsletter_wrap">
						{% endif %}
							{% case settings.newsletter_form_type %}
								{% when 'newsletter_shopify' %}
										{% capture newsletterForm %}
											{% form 'customer', class: 'newsletter_form' %}
												{{ form.errors | default_errors }}

												<p class="alert alert-success">{{ 'layout.footer.newsletter_success' | t }}</p>
												
												{% if together %}
													{% if block.settings.newsletter_text.size > 0 %}
														<p class="form_text">{{ block.settings.newsletter_text }}</p>
													{% else %}	
														<p class="form_text">{{ 'layout.footer.newsletter_tagline' | t }}</p>
													{% endif %}
												{% endif %}

												<input type="hidden" name="contact[tags]" value="Newsletter subscriber">
												<div class="form_wrapper">
													<input type="email" name="contact[email]" class="input-group__field newsletter__input" placeholder="Enter your email">
													<button class="btn btn_alt" type="submit">{{ 'layout.footer.subscribe_button' | t }}</button>
												</div>
												
											{% endform %}
										{% endcapture %}

										{% assign newsletterForm = newsletterForm | replace: "'", "&lsquo;" | replace: 'id="contact_form"', 'id="newsletter_form"' | strip_newlines %}

								{% when 'newsletter_mailchimp' %}
									{% capture newsletterForm %}
										{% if together %}
											{% if block.settings.newsletter_text.size > 0 %}
												<p class="form_text">{{ block.settings.newsletter_text }}</p>
											{% else %}	
												<p class="form_text">{{ 'layout.footer.newsletter_tagline' | t }}</p>
											{% endif %}
										{% endif %}

										<div class="newsletter_form__mailchimp">
											<form action="{{ settings.newsletter_mailchimp_url }}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="newsletter_form">
												<input required type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" placeholder="Enter your email">
												<button class="btn btn_alt" type="submit" name="subscribe" id="mc-embedded-subscribe">{{ 'layout.footer.subscribe_button' | t }}</button>
											</form>
										</div>
									{% endcapture %}
							{% endcase %}

							{{ newsletterForm }}
						</div>
						
						{% if together %}
							<div class="social_wrap">
						{% else %}
							<div class="col-xs-4 social_wrap">
						{% endif %}
						
							<h4>{{ block.settings.social_title }}</h4>
							<ul class="{{ block.settings.icon_style }}">
								{% if block.settings.social_fb.size > 0 %}
									<li><a href="{{ block.settings.social_fb }}"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
								{% endif %}

								{% if block.settings.social_tw.size > 0 %}
									<li><a href="{{ block.settings.social_tw }}"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
								{% endif %}

								{% if block.settings.social_inst.size > 0 %}
									<li><a href="{{ block.settings.social_inst }}"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
								{% endif %}

								{% if block.settings.social_pin.size > 0 %}
									<li><a href="{{ block.settings.social_pin }}"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
								{% endif %}

								{% if block.settings.social_gplus.size > 0 %}
									<li><a href="{{ block.settings.social_gplus }}"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>
								{% endif %}

								{% if block.settings.social_yt.size > 0 %}
									<li><a href="{{ block.settings.social_yt }}"><i class="fa fa-youtube" aria-hidden="true"></i></a></li>
								{% endif %}
							</ul>
						</div>
					</div>

				{% when 'facebook' %}
					<div class="col-sm-4 item__{{ block.type }}">
						<div id="fb-root"></div>

						<script>
							(function(d, s, id) {
								var js, fjs = d.getElementsByTagName(s)[0];
								if (d.getElementById(id)) return;
								js = d.createElement(s); js.id = id;
								js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.8&appId=853490611342442";
								fjs.parentNode.insertBefore(js, fjs);
							}(document, 'script', 'facebook-jssdk'));

							window.onresize = function() {
								FB.XFBML.parse();
							};
						</script>

						<div class="fb-page" data-href="{{ block.settings.fb_block }}" data-tabs="timeline" data-border-color="#ff0000" data-width="370" data-height="330" data-small-header="true" data-adapt-container-width="true" data-hide-cover="true" data-show-facepile="true"><blockquote cite="{{ block.settings.fb_block }}" class="fb-xfbml-parse-ignore"><a href="{{ block.settings.fb_block }}">{{ block.settings.fb_block | replace: '/', '' | replace: 'https:', '' | replace: 'www.facebook.com', '' }}</a></blockquote></div>
					</div>

				{% when 'twitter' %}
					<div class="col-sm-4 item__{{ block.type }}">
						<a class="twitter-timeline" href="{{ block.settings.tw_block }}" data-width="370" data-height="330" data-border-color="{{ settings.border_color }}" data-chrome="nofooter"></a>
					</div>

					<script src="//platform.twitter.com/widgets.js" charset="utf-8" async></script>

			{% endcase %}
		{% endfor %}
	</div>
</div>

<style>
	#shopify-section-{{ section.id }}.section_communication {background-color: {{ section.settings.section_bg_color }};}
</style>

{% schema %}
{
	"name": "Communication",
	"class": "section section_homepage section_communication",
	"max_blocks": 3,
	"settings": [
		{
			"type": "text",
			"id": "section_title",
			"label": "Title",
			"default": "Communication"
		},
		{
			"type": "color",
			"id": "section_bg_color",
			"label": "Color",
			"default": "transparent"
		},
		{
			"type": "checkbox",
			"id": "no_padding",
			"label": "Without padding"
		}
	],
	"blocks": [
		// ADVANTAGES ///////////////////////////////////////////////////////////////////////////////////////////
		{
			"type": "advantages",
			"name": "Advantages",
			"settings": [
				{
					"type": "radio",
					"id": "block_view",
					"label": "Advantages view",
					"options": [
						{ 
							"value": "together", 
							"label": "Common" 
						},
						{ 
							"value": "separately", 
							"label": "Separately" 
						}
					],
					"default": "together",
