									{{ 'image' | placeholder_svg_tag: 'img_placeholder' }}
								</div>
							{% endif %}

							<a href="{{ block.settings.item_link }}" class="banner_caption style_{{ block.settings.caption_style }}">
								<div class="caption_text">
									<div>
										{% if block.settings.item_subtitle.size > 0 %}
											<h4>{{ block.settings.item_subtitle }}</h4>
										{% endif %}

										{% if block.settings.item_title.size > 0 %}
											<h3>{{ block.settings.item_title }}</h3>
										{% endif %}
									</div>
								</div>
							</a>
						</div>
					</div>

				{% when 'menu' %}
					{% case section.settings.section_height %}
						{% when 'small'  %}
							{% if block.settings.link_style == 'rarefied' %}
								{%- assign link_limit = 7 -%}
							{% else %}
								{%- assign link_limit = 11 -%}
							{% endif %}

						{% when 'medium' %}
							{% if block.settings.link_style == 'rarefied' %}
								{%- assign link_limit = 8 -%}
							{% else %}
								{%- assign link_limit = 12 -%}
							{% endif %}

						{% when 'large'  %}
							{% if block.settings.link_style == 'rarefied' %}
								{%- assign link_limit = 9 -%}
							{% else %}
								{%- assign link_limit = 13 -%}
							{% endif %}
					{% endcase %}

					<div class="col-sm-3 banner_{{ block.type }} menu_{{ section.settings.section_height }} style_{{ block.settings.link_style }}">
						<div class="menu_wrap banner_menu_item">
							<h4 class="linklist_title">{{ linklists[block.settings.links].title }}<span class="menu_trigger"><i class="fa fa-caret-down"></i></span></h4>
							<ul>
								{% for link in linklists[block.settings.links].links limit: link_limit %}
									<li class="link_item">
										<a class="linklist_link" href="{{ link.url }}">{{ link.title }}</a>
									</li>
								{% endfor %}
							</ul>
						</div>
					</div>

			{% endcase %}
		{% endfor %}
	</div>
</div>

